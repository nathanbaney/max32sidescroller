void setup() {
  srand(time(NULL));
  pinMode(SysLED, OUTPUT);

  pinMode(LD1, OUTPUT);
  pinMode(LD5, OUTPUT); 
  pinMode(LD6, OUTPUT);  
  pinMode(LD7, OUTPUT);  
  pinMode(LD8, OUTPUT); 

  pinMode(BTN1, INPUT);
  pinMode(BTN2, INPUT);
  pinMode(BTN4, INPUT); 
  
  IOShieldOled.begin();  
  //IOShieldOled.setDrawMode(modeSet);
  IOShieldOled.clearBuffer();

  createInitialPlayerShip();

  drawScreen();

  IOShieldOled.updateDisplay();
  
  //TESTING
  createEnemy(110,15);
} 
void loop() {
  IOShieldOled.clearBuffer();
// Read state of buttons
  BTN1_state = digitalRead(BTN1); 
  BTN2_state = digitalRead(BTN2);
  BTN4_state = digitalRead(BTN4);
  
  if (BTN1_state == HIGH) { digitalWrite(LD5, HIGH);   } 
  if (BTN1_state == LOW) { digitalWrite(LD5, LOW);   } 
  if (BTN2_state == HIGH) { digitalWrite(LD6, HIGH);   } 
  if (BTN2_state == LOW) { digitalWrite(LD6, LOW);   } 
  if (BTN4_state == HIGH) { digitalWrite(LD8, HIGH);   } 
  if (BTN4_state == LOW) { digitalWrite(LD8, LOW);   } 

  if (BTN1_state == 1) {
    //drawPlayerShip(0);
    movePlayer(1);
  }
  if (BTN4_state == 1) {
    //drawPlayerShip(0);
    movePlayer(-1);
  }
  if (BTN2_state == 1 && canShoot == 8 && bulletCount < MAX_BULLETS) {
    canShoot = 0;
    createNewBullet();
  }
  if (canShoot < 8) {
    canShoot++;
  } 
  detectBulletHits();
  detectCollision();
  drawScreen();
  IOShieldOled.updateDisplay();
  moveEnemies();
  moveBullets();
  terrainPointer++;
  placeEnemyCounter++;
  if(placeEnemyCounter == ENEMY_SPAWN_RATE && enemyCount < MAX_ENEMIES){
    placeEnemyCounter = 0;
    createEnemy(110,20);
  }
  if(terrainPointer == 128){
    terrainPointer = 0;
  }
  delay(30);                 
}
// Draw the Contents of screenSpace
void drawScreen() {
  for (int j = 0; j < SCREEN_HEIGHT; j++) {
    for (int i = 0; i < SCREEN_WIDTH; i++) {
      createBarriers(i,j);
      IOShieldOled.moveTo(i,j);
      if (screenSpace[i][j] == 1) {
        IOShieldOled.setDrawColor(colorWHITE);
      } else {
        IOShieldOled.setDrawColor(colorBLACK);
      }
      IOShieldOled.drawPixel();
      }
   }
   drawBullets();
   IOShieldOled.moveTo(pPosX,pPosY);
   IOShieldOled.putBmp(PLAYER_WIDTH,PLAYER_HEIGHT,bmpShip);
   drawEnemy();
}

void drawBullets() {
  for(int x = 0; x < MAX_BULLETS; x++){
    if(activeBulletsX[x] != NULL){
      IOShieldOled.moveTo(activeBulletsX[x],activeBulletsY[x]);
      IOShieldOled.drawPixel();
    }
  }
}

// Draw the Enemies
void drawEnemy() {
  for(int x = 0; x < MAX_ENEMIES; x++){
    if(enemiesX[x] != NULL){
      IOShieldOled.moveTo(enemiesX[x],enemiesY[x]);
      IOShieldOled.putBmp(ENEMY1_WIDTH,ENEMY1_HEIGHT,bmpEnemy1);
    }
  }
}
// Detect if any bullets hit a target
void detectBulletHits() {
  for(int j = 0;j < MAX_BULLETS; j++){
    for(int k = 0;k < MAX_ENEMIES; k++){
      int distX = activeBulletsX[j] - enemiesX[k];
      int distY = activeBulletsY[j] - enemiesY[k];
      if(distX < ENEMY1_WIDTH && distX >= 0 && distY < ENEMY1_HEIGHT && distY >= 0) {
        activeBulletsX[j] = NULL;
        bulletCount--;
        enemiesX[k] = NULL;
        enemyCount--;
      }
    }
  }
}
void detectCollision(){
  for(int j = 0;j < MAX_ENEMIES; j++){
    int distX = abs(enemiesX[j] - pPosX);
    int distY = abs(enemiesY[j] - pPosY);
    if(distX < PLAYER_WIDTH && distY < PLAYER_HEIGHT) {
      enemiesX[j] = NULL;
      enemyCount--;  
    }
  }  
}

void movePlayer(int direction) {
  if (direction == -1 && pPosY == BARRIER_WIDTH) {
    return;
  }
  if (direction == 1 && pPosY == SCREEN_HEIGHT - BARRIER_WIDTH) {
    return;
  }
  pPosY += direction;
}

void moveBullets(){
  for(int x = 0;x<MAX_BULLETS;x++){
    if(activeBulletsX[x] != NULL){
      activeBulletsX[x]+=BULLET_INTERVAL;
      if(activeBulletsX[x] >127){
        activeBulletsX[x] = NULL;
        bulletCount--;
      }
    }
  }
}
// Move Enemies Forward
void moveEnemies() {
  for(int x = 0; x < MAX_ENEMIES;x++){
    enemiesX[x]-= ENEMY_MOVEMENT_SPEED;
    if(enemiesX[x] < ENEMY1_WIDTH - 4){
      enemiesX[x] = NULL;
      enemyCount--;
    }
  }
}
//Creates the ceiling and the floor
void createBarriers(int i, int j) {
  int temp = (i + terrainPointer) % SCREEN_WIDTH;
  if(terrain_array[temp][j] == 1){
    screenSpace[i][j] = 1;
  }else if(terrain_array[temp][j] == 0 && terrain_array[temp-1][j] == 1){
    screenSpace[i][j] = 0;
  }
}

void createInitialPlayerShip() {
  pPosX = 20;
  pPosY = 16;
}

void createEnemy(int i, int j) {
  if(enemyCount < MAX_ENEMIES){
    int enemySlot = 0;
    while(enemiesX[enemySlot] !=NULL){
      enemySlot++;
    }
    enemiesX[enemySlot] = 110;
    enemiesY[enemySlot] = (rand() % 20) + 5;
    enemyCount++;
  }
}

void createNewBullet() {
  if(bulletCount < MAX_BULLETS){
    int bulletSlot = 0;
    while(activeBulletsX[bulletSlot] !=NULL){
      bulletSlot++;
    }
    activeBulletsX[bulletSlot] = pPosX;
    activeBulletsY[bulletSlot] = pPosY+1;
    bulletCount++;
  }
}
